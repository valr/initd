PATH="/opt/busybox"
cd /
umask 022

. /etc/rc.subr

################################################################################
# parameters ###################################################################
################################################################################

RC_NAME="udev"
RC_COMMAND="/usr/bin/udevd"
RC_COMMAND_OPTIONS="--daemon"

################################################################################
# functions ####################################################################
################################################################################

udev_start() {
  STATUS=0

  eval "${RC_COMMAND}" "${RC_COMMAND_OPTIONS}"            || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=subsystems || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=devices    || STATUS=1
  /usr/bin/udevadm settle --timeout=120                   || STATUS=1

  return $STATUS
}

udev_stop() {
  /usr/bin/udevadm control --exit
  _wait_command "${RC_COMMAND}" 20 || return 1

  return 0
}

################################################################################
# processing ###################################################################
################################################################################

case "$1" in
  start)
    do_start udev_start
    STATUS=$?
    ;;

  stop)
    do_stop udev_stop
    STATUS=$?
    ;;

  restart)
    do_stop udev_stop
    do_start # not udev_start
    STATUS=$?
    ;;

  reload)
    do_reload "/usr/bin/udevadm control --reload"
    STATUS=$?
    ;;

  status)
    do_status
    STATUS=$?
    ;;

  *)
    echo "usage: `basename $0` {start|stop|restart|reload|status}"
    STATUS=1
    ;;
esac

exit $STATUS
