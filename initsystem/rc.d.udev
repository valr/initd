PATH="/opt/busybox"
cd /
umask 022

. /etc/rc.subr

################################################################################
# parameters ###################################################################
################################################################################

CMD_PATH="/usr/bin/udevd"
CMD_PARM="--daemon"

################################################################################
# functions ####################################################################
################################################################################

x_start() {
  STATUS=0

  /usr/bin/udevadm hwdb --update                          || STATUS=1
  "${CMD_PATH}" "${CMD_PARM}"                             || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=subsystems || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=devices    || STATUS=1
  /usr/bin/udevadm settle --timeout=120                   || STATUS=1

  return $STATUS
}

x_stop() {
  /usr/bin/udevadm control --exit

  do_wait "${CMD_PATH}" 20

  if [ $? -ne 0 ]; then
    return 1
  else
    return 0
  fi
}

################################################################################
# processing ###################################################################
################################################################################

case "$1" in
  start)
    do_start x_start
    STATUS=$?
    ;;

  stop)
    do_stop x_stop
    STATUS=$?
    ;;

  restart)
    do_stop x_stop
    do_start
    STATUS=$?
    ;;

  reload)
    do_reload "/usr/bin/udevadm control --reload"
    STATUS=$?
    ;;

  status)
    do_status
    STATUS=$?
    ;;

  *)
    echo "usage: `basename $0` {start|stop|restart|reload|status}"
    STATUS=1
    ;;
esac

exit $STATUS
