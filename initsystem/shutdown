PATH="/opt/busybox"
export PATH

################################################################################
# sanity check #################################################################
################################################################################

if [ $(id -u) != 0 ]; then
  echo "error: this script should be run as root"
  exit 1
fi

################################################################################
# shutdown #####################################################################
################################################################################

case `basename $0` in
  halt)
    kill -12 1 # SIGUSR2
    ;;
  poweroff)
    kill -15 1 # SIGTERM
    ;;
  reboot)
    kill -10 1 # SIGUSR1
    ;;
  shutdown)
    if [ $# -lt 1 ]; then
      echo "usage: shutdown -h|-p|-r"
      exit 1
    fi

    case $1 in
      -h)
        kill -12 1 # SIGUSR2
        ;;
      -p)
        kill -15 1 # SIGTERM
        ;;
      -r)
        kill -10 1 # SIGUSR1
        ;;
      *)
        echo "usage: shutdown -h|-p|-r"
        exit 1
        ;;
    esac
    ;;
  *)
    echo "usage: halt|poweroff|reboot|shutdown"
    exit 1
    ;;
esac

exit 0
