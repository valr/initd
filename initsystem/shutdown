PATH=/opt/busybox
LC_ALL=C

export PATH LC_ALL

################################################################################
# sanity check #################################################################
################################################################################

if [ $(id -u) != 0 ]; then
  echo "error: this script should be run as root"
  exit 1
fi

################################################################################
# shutdown #####################################################################
################################################################################

case $(basename "$0") in
  halt)     kill -USR2 1 ;;
  poweroff) kill -TERM 1 ;;
  reboot)   kill -USR1 1 ;;
  shutdown)
    case "$1" in
      -h) kill -USR2 1 ;;
      -p) kill -TERM 1 ;;
      -r) kill -USR1 1 ;;
      *)
        echo "usage: shutdown {-h|-p|-r}"
        exit 1
        ;;
    esac
    ;;
  *)
    echo "usage: {halt|poweroff|reboot|shutdown}"
    exit 1
    ;;
esac

exit 0
