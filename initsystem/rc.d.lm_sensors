PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr
. /etc/conf.d/lm_sensors

start() {
  STATUS=0
  /usr/bin/modprobe -a -b -s ${BUS_MODULES} ${HWMON_MODULES} || STATUS=1
  /usr/bin/sensors -s                                        || STATUS=1
  return $STATUS
}

stop() {
  /usr/bin/modprobe -a -b -s -r ${BUS_MODULES} ${HWMON_MODULES}
}

rc_run "start stop" $@
