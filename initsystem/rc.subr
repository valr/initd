check_command() {
  STATUS=0

  for CMD in $@; do
    if [ ! -x "${CMD}" ]; then
      printf "${CMD} is not present or not executable => failed\n"
      STATUS=1
    fi
  done

  return $STATUS
}

action_status() {
  PID=`pidof "$1"`

  if [ ! -z "${PID}" ]; then
    printf "%s is running as pid %d\n" "$1" "$PID"
  else
    printf "%s is not running\n" "$1"
  fi

  return 0
}

action_wait() {
  for i in `seq $2`; do
    if ! pidof "$1" 1>/dev/null 2>/dev/null; then
      return 0
    fi

    sleep .25
  done

  return 1
}
