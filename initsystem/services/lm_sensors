[ -f /etc/conf.d/lm_sensors ] || { echo "missing /etc/conf.d/lm_sensors"; exit 1; }
. /etc/conf.d/lm_sensors

. /etc/rc.conf
. /etc/rc.subr

start() {
  /usr/bin/modprobe -a -b -s "${BUS_MODULES}" "${HWMON_MODULES}"
  /usr/bin/sensors -s
}

stop() {
  /usr/bin/modprobe -a -b -s -r "${BUS_MODULES}" "${HWMON_MODULES}" || return 0
}

display() {
  /usr/bin/sensors
}

rc_run "start stop display" $@

# vim: set filetype=sh:
