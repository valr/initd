[Trigger]
Type = File
Operation = Install
Operation = Upgrade
Target = etc/mkinitcpio.d/*.preset
Target = usr/lib/firmware/*

[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = busybox
Target = dosfstools
Target = e2fsprogs
Target = initsystem
Target = mkinitcpio

[Action]
Description = Rebuilding initramfs
When = PostTransaction
Exec = /bin/bash -c 'for PRESET in /etc/mkinitcpio.d/*.preset; do mkinitramfs $(basename "${PRESET}" .preset); done'
