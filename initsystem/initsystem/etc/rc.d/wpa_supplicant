read -r INTERFACE < "/etc/wpa_supplicant/$(basename "$0").interface"

rc_start_cmd="/usr/bin/wpa_supplicant -q -B -c /etc/wpa_supplicant/$(basename "$0").conf -i ${INTERFACE}"

. /etc/rc.subr

rc_pre_start() {
  /usr/bin/ip link set "${INTERFACE}" down
  /usr/bin/ip link set "${INTERFACE}" up
}

rc_post_stop() {
  /usr/bin/ip link set "${INTERFACE}" down
}

rc_run "start stop restart status" $@

# vim: set filetype=sh:
