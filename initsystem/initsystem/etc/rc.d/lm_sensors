rc_start_cmd="/usr/bin/sensors -s"
rc_stop_cmd="true" # nothing to stop
rc_display_cmd="/usr/bin/sensors"

. /etc/conf.d/lm_sensors # generated by sensors-detect
. /etc/rc.subr

rc_pre_start() {
  /usr/bin/modprobe -a -b -s ${BUS_MODULES} ${HWMON_MODULES}
}

rc_post_stop() {
  /usr/bin/modprobe -a -b -s -r ${BUS_MODULES} ${HWMON_MODULES} || return 0
}

rc_run "start stop display" $@

# vim: set filetype=sh:
