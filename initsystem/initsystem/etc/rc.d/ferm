#!/bin/ash

rc_type="nodaemon"

rc_start_cmd="/usr/bin/ferm /etc/ferm.conf"
rc_stop_cmd="/usr/bin/ferm --flush /etc/ferm.conf"
rc_reload_cmd="/usr/bin/ferm /etc/ferm.conf"
rc_display_cmd="/usr/bin/ferm --noexec --lines /etc/ferm.conf"

. /etc/rc.d/rc.subr

rc_run "start stop restart reload display" $@

# vim: set filetype=sh:
