PATH="/opt/busybox"
cd /
umask 022

. /etc/rc.subr

################################################################################
# parameters ###################################################################
################################################################################

RC_NAME="alsa"

################################################################################
# processing ###################################################################
################################################################################

case "$1" in
  start)
    do_run "starting ${RC_NAME} " "/usr/bin/alsactl -s -O /var/lib/alsa/asound.state.lock restore"
    STATUS=$?
    ;;

  stop)
    do_run "stopping ${RC_NAME} " "/usr/bin/alsactl -s -O /var/lib/alsa/asound.state.lock store"
    STATUS=$?
    ;;

  restart)
    do_run "stopping ${RC_NAME} " "/usr/bin/alsactl -s -O /var/lib/alsa/asound.state.lock store"
    do_run "starting ${RC_NAME} " "/usr/bin/alsactl -s -O /var/lib/alsa/asound.state.lock restore"
    STATUS=$?
    ;;

  *)
    echo "usage: `basename $0` {start|stop|restart}"
    STATUS=1
    ;;
esac

exit $STATUS
