pkgname=initsystem
pkgver=1.0.0
pkgrel=1
pkgdesc='An init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('x86_64')
backup=('etc/rc.conf')
depends=('musl-cross-x86_64' 'musl-libc' 'busybox' 'eudev' 'kbd')
source=('init.c'
        'rc'
        'rc.conf'
        'rc.respawn'
        'rc.shutdown'
        'shutdown'
        'tmpfiles'
        'rc.subr'
        'rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'LICENSE')
md5sums=('8063252b587fc69fa70d1a8f467abbac'
         '605f9583dbd52f2e26a7df41a68067cf'
         'cd6cec15484be20a115fef515ede7b36'
         '2e9ebe16c96033b2f6e942608af008e1'
         'e5c1382c069b374c223047dcb446b4b5'
         '71f1f64dc86f79cf7d74c988a85de66f'
         'faf41c841242d8d499fbaba52397d2dd'
         'dce50a04236c2bc6f61c24e3fdcb0ecc'
         '2bf1df28d03dc23569e72c0da10f9075'
         'b1282d90d56c263828576937ac471a3a'
         '55ac446974f84aa98d6ee89283dcaefa'
         '9f110da586746b2c849e299d792af6e4'
