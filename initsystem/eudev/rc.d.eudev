export PATH=/opt/busybox
export LC_ALL=C

cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -fx "/usr/bin/udevd --daemon" 1>/dev/null 2>/dev/null && return 0

  STATUS=0

  /usr/bin/udevd --daemon                                 || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=subsystems || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=devices    || STATUS=1
  /usr/bin/udevadm settle --timeout=120                   || STATUS=1

  return $STATUS
}

_start() {
  pgrep -fx "/usr/bin/udevd --daemon" 1>/dev/null 2>/dev/null && return 0

  /usr/bin/udevd --daemon
}

stop() {
  pgrep -fx "/usr/bin/udevd --daemon" 1>/dev/null 2>/dev/null || return 0

  /usr/bin/udevadm control --exit

  pwait "/usr/bin/udevd --daemon" 20
}

restart() {
  stop
  _start
}

reload() {
  pgrep -fx "/usr/bin/udevd --daemon" 1>/dev/null 2>/dev/null || return 1

  /usr/bin/udevadm control --reload
}

status() {
  PID=$(pgrep -fx "/usr/bin/udevd --daemon" 2>/dev/null | tr '\n' ' ')

  if [ "$PID" ]; then
    echo "eudev is started as pid: $PID"; return 0
  else
    echo "eudev is stopped"; return 1
  fi
}

rc_run "start stop restart reload status" $@

