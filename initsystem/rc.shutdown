PATH=/opt/busybox
cd /
umask 022

. /etc/rc.conf

################################################################################
# sanity check #################################################################
################################################################################

if [ $PPID != 1 ]; then
  echo "shutdown: this script should have ppid 1"
  exit 1
fi

################################################################################
# terminal settings ############################################################
################################################################################

echo ""
echo "shutdown: changing terminal settings"

chvt 1
stty onlcr

################################################################################
# local script #################################################################
################################################################################

echo "shutdown: starting local shutdown script"

. /etc/rc.shutdown.local

################################################################################
# services #####################################################################
################################################################################

echo "shutdown: stopping services"

REVERSE_SERVICES=""
for SERVICE in ${SERVICES}; do
  REVERSE_SERVICES="${SERVICE} ${REVERSE_SERVICES}"
done

for SERVICE in ${REVERSE_SERVICES}; do
  /etc/rc.d/"${SERVICE}" stop
done

################################################################################
# devices ######################################################################
################################################################################

echo "shutdown: stopping devices handler"

if [ -x /usr/bin/udevd ]; then
  /etc/rc.d/eudev stop
fi

if [ -x /usr/lib/systemd/systemd-udevd ]; then
  /etc/rc.d/udev stop
fi

################################################################################
# kill remaining processes #####################################################
################################################################################

wait_pids() {
  for i in `seq $1`; do
    killall5 -CONT;

    if [ $? -eq 2 ]; then
      return 0
    fi

    sleep .25
  done

  return 1
}

echo "shutdown: sending SIGTERM to processes"

killall5 -TERM
wait_pids 120

if [ $? -ne 0 ]; then
  echo "shutdown: sending SIGKILL to processes"

  killall5 -KILL
  wait_pids 120
fi

################################################################################
# random seed ##################################################################
################################################################################

echo "shutdown: saving random seed"

RANDOM_SEED=/var/lib/misc/random-seed

touch "${RANDOM_SEED}"
chmod 600 "${RANDOM_SEED}"

POOL_FILE=/proc/sys/kernel/random/poolsize

if [ -r "${POOL_FILE}" ]; then
  POOL_SIZE=`cat "${POOL_FILE}"`
else
  POOL_SIZE=512
fi

dd if=/dev/urandom of="${RANDOM_SEED}" count=1 bs=$POOL_SIZE &>/dev/null

################################################################################
# dmesg ########################################################################
################################################################################

echo "shutdown: saving dmesg"

umask 077
dmesg > /var/log/dmesg.shutdown
umask 022

################################################################################
# filesystems ##################################################################
################################################################################

echo "shutdown: writing wtmp record"

/usr/bin/busybox halt -w

echo "shutdown: syncing filesystems"

sync; sleep 3

echo "shutdown: unmounting filesystems"

MOUNTS=`tac /proc/self/mounts | cut -d ' ' -f 2`
for MOUNT in ${MOUNTS}; do
  case ${MOUNT} in
    /|/proc|/sys|/run|/dev|/dev/pts)
      ;;
    *)
      umount -r -l ${MOUNT}
      ;;
  esac
done

echo "shutdown: remounting root filesystem read-only"

mount -o remount,ro /

################################################################################
# finish #######################################################################
################################################################################

case "$1" in
  halt)
    echo "shutdown: system is halting"
    /usr/bin/busybox halt -f
    ;;
  poweroff)
    echo "shutdown: system is shutting down"
    /usr/bin/busybox poweroff -f
    ;;
  reboot)
    echo "shutdown: system is rebooting"
    /usr/bin/busybox reboot -f
    ;;
esac

echo "error: unexpected shutdown condition, halting now"
/usr/bin/busybox halt -f
