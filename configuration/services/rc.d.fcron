PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /usr/bin/fcron 1>/dev/null 2>/dev/null && \
    { echo "fcron is already running"; return 1; }

  rm -f /run/fcron.pid

  /usr/bin/fcron
}

stop() {
  pkill -TERM -x /usr/bin/fcron
  pkill -CONT -x /usr/bin/fcron

  pwait /usr/bin/fcron 20 || \
    { echo "fcron is still running"; return 1; }

  rm -f /run/fcron.pid
}

restart() {
  stop
  start
}

reload() {
  pgrep -n -x /usr/bin/fcron 1>/dev/null 2>/dev/null || \
    { echo "fcron is not running"; return 1; }

  pkill -USR1 -x /usr/bin/fcron
}

status() {
  echo "fcron is running as pid: "
  pgrep -x /usr/bin/fcron
}

display() {
  /usr/bin/fcrondyn -x ls
}

rc_run "start stop restart reload status display" $@
