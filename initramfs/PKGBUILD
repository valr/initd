# Maintainer: valr <valere dot monseur at ymail dot com>

pkgname=initramfs
pkgver=1.2.0
pkgrel=1
pkgdesc='initramfs image creation utility'
url='https://github.com/valr/initsystem'
license=('GPL')
arch=('any')
depends=('busybox' 'dosfstools' 'e2fsprogs' 'glibc' 'mkinitcpio')

source=('lsinitramfs'
        'mkinitramfs'
        'initramfs'
        'initramfs.hook'
        'LICENSE')
md5sums=('e3fbb7be1fcebefdf8a5ba4f73556fa2'
         '06bddf668feb73e076f12e605291cf8c'
         '32d16da3242f278284fc132c4d19b5a3'
         'd53a42b96b6e1a0e862ea34ccf5bf50a'
         '4641e94ec96f98fabc56ff9cc48be14b')

package() {
  install -D -m 755 "$srcdir"/lsinitramfs    "$pkgdir"/usr/bin/lsinitramfs
  install -D -m 755 "$srcdir"/mkinitramfs    "$pkgdir"/usr/bin/mkinitramfs
  install -D -m 755 "$srcdir"/initramfs      "$pkgdir"/usr/lib/initramfs/initramfs
  install -D -m 644 "$srcdir"/initramfs.hook "$pkgdir"/usr/share/libalpm/hooks/99-zinitramfs.hook
  install -D -m 644 "$srcdir"/LICENSE        "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

# vim: set filetype=sh: