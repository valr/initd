# Maintainer: valr <valere dot monseur at ymail dot com>

pkgname=initramfs
pkgver=1.0.0
pkgrel=1
pkgdesc='initramfs image creation utility'
url='https://github.com/valr/initsystem'
license=('GPL')
arch=('any')
depends=('busybox' 'dosfstools')
install='initramfs.install'
source=('lsinitramfs'
        'mkinitramfs'
        'initramfs'
        'initramfs.mkinitcpio'
        'LICENSE')
md5sums=('b4167ce1e699d90ad7a41cfdfdbad890'
         '6a3972da83e84cb314843729334c3c1e'
         '946352e998e8c7fa15bf71229af607f9'
         '860d93b1551ee671ab4c139a62d2dc3f'
         '4641e94ec96f98fabc56ff9cc48be14b')

package() {
  install -dm755 "${pkgdir}"/etc/mkinitramfs.d
  install -Dm755 lsinitramfs "${pkgdir}"/usr/bin/lsinitramfs
  install -Dm755 mkinitramfs "${pkgdir}"/usr/bin/mkinitramfs
  install -Dm755 initramfs "${pkgdir}"/usr/lib/initramfs/initramfs
  install -Dm644 "${srcdir}"/initramfs.mkinitcpio "${pkgdir}"/usr/lib/initcpio/install/initramfs
  install -Dm644 "${srcdir}"/LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
