# Maintainer: valr <valere dot monseur at ymail dot com>

pkgname=initramfs
pkgver=1.0.0
pkgrel=50
pkgdesc='Initramfs image creation utility'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('busybox' 'fsck-ext' 'fsck-fat')
install='initramfs.install'
source=('mkinitramfs'
        'initramfs'
        'initramfs.mkinitcpio'
        'LICENSE')
md5sums=('a71c9fd51374165ebc7095ac4f910b01'
         'a679f16bb8e2e7c277f5e228f18bd720'
         '9f1c6ff05b3f32f8ea72e919fac41d40'
         '4641e94ec96f98fabc56ff9cc48be14b')

package() {

  # binaries

  install -Dm755 mkinitramfs "${pkgdir}"/usr/bin/mkinitramfs
  install -Dm755 initramfs   "${pkgdir}"/usr/bin/initramfs

  # install mkinitcpio hook

  install -Dm644 "${srcdir}"/initramfs.mkinitcpio "${pkgdir}"/usr/lib/initcpio/install/initramfs

  # license

  install -Dm644 "${srcdir}"/LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
