# Maintainer: valr <valere dot monseur at ymail dot com>

pkgname=initramfs
pkgver=1.1.0
pkgrel=1
pkgdesc='initramfs image creation utility'
url='https://github.com/valr/initsystem'
license=('GPL')
arch=('any')
depends=('busybox' 'dosfstools' 'e2fsprogs' 'glibc' 'mkinitcpio')

source=('lsinitramfs'
        'mkinitramfs'
        'initramfs'
        'initramfs.hook'
        'LICENSE')
md5sums=('3f1de69b9d9869253a9c0eba0cf93544'
         '2d6059911e93a75f139559f32238c906'
         '36ed4630e536b31fc881a3bafea4a219'
         '3bbcb13a436e10bdb7c5147ff52d9afb'
         '4641e94ec96f98fabc56ff9cc48be14b')

package() {
  install -D -m755 "${srcdir}"/lsinitramfs "${pkgdir}"/usr/bin/lsinitramfs
  install -D -m755 "${srcdir}"/mkinitramfs "${pkgdir}"/usr/bin/mkinitramfs
  install -D -m755 "${srcdir}"/initramfs "${pkgdir}"/usr/lib/initramfs/initramfs
  install -D -m644 "${srcdir}"/initramfs.hook "${pkgdir}"/usr/share/libalpm/hooks/initramfs.hook
  install -D -m644 "${srcdir}"/LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
