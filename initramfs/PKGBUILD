# Maintainer: Val√®re Monseur <valere dot monseur at ymail dot com>

pkgname=initramfs
pkgver=1.0.0
pkgrel=1
pkgdesc='Initramfs image creation utility'
url='https://github.com/valr/initd'
license=('GPL')
groups=('initd')
arch=('any')
depends=('busybox' 'fsck')
install='initramfs.install'
source=('mkinitramfs'
        'initramfs'
        'LICENSE')
md5sums=('6cd5f4ccc78d3b17d00dd8ada6a3dc51'
         '5f1f1b5e0b84ab92215be854e088380d'
         '4641e94ec96f98fabc56ff9cc48be14b')

package() {

  # binaries

  install -Dm755 mkinitramfs "${pkgdir}"/usr/bin/mkinitramfs
  install -Dm755 initramfs   "${pkgdir}"/usr/bin/initramfs

  # license

  install -Dm644 "${srcdir}"/LICENSE "${pkgdir}"/usr/share/licenses/"${pkgname}"/LICENSE
}
