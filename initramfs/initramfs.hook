[Trigger]
Operation = Install
Operation = Upgrade
Type = File
Target = etc/mkinitcpio.d/*.preset

[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = busybox
Target = dosfstools
Target = e2fsprogs
Target = initramfs

[Action]
Description = Rebuilding initramfs
Exec = /bin/bash -c 'for PRESET in /etc/mkinitcpio.d/*.preset; do mkinitramfs $(basename "${PRESET}" .preset); done'
When = PostTransaction
