LOG_DIR='/var/log/initd'

if [ ! -d "${LOG_DIR}" ]; then
  /opt/busybox/mkdir -p "${LOG_DIR}"
fi

/opt/busybox/chown tinylog:log "${LOG_DIR}"
/opt/busybox/chmod 2755 "${LOG_DIR}"

exec \
  /usr/sbin/runuid -g log tinylog \
  /usr/sbin/tinylog "${LOG_DIR}"
