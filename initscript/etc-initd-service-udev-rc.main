set -u

exec 2>&1

TARGET="$1"
SERVICE="$2"

start() {
  (
    # FIXME: this could be an infinite loop
    while ! /opt/busybox/pidof systemd-udevd >/dev/null; do
      sleep .25
    done

    /usr/bin/udevadm trigger --action=add --type=subsystems
    /usr/bin/udevadm trigger --action=add --type=devices
  ) &

  exec /usr/lib/systemd/systemd-udevd
}

reset() {
  case "$3" in
    'exit')
      echo "*** ${SERVICE}: exited with code $4"
      ;;
    'signal')
      echo "*** ${SERVICE}: killed by signal $5"
      ;;
    * )
      echo "*** ${SERVICE}: stopped ($3)"
      ;;
  esac

  exit 0
}

eval "${TARGET}" "$@"

