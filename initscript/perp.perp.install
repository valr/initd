post_install() {
  getent passwd tinylog &>/dev/null || useradd -r -g log -d / -s /bin/false -c tinylog tinylog >/dev/null

  chown tinylog:log /var/log/initd
  chmod 2755 /var/log/initd

  true
}

post_remove() {
  getent passwd tinylog &>/dev/null && userdel tinylog >/dev/null

  true
}
