CTL_DIR='/run/perp'
CTL_LNK='.control'

PERP_OPTS='-a0'

if [ ! -d "${CTL_DIR}" ]; then
  /opt/busybox/mkdir -p "${CTL_DIR}"
fi

/opt/busybox/chmod 755 "${CTL_DIR}"

if [ ! -h "${PERP_BASE}/${CTL_LNK}" ]; then
  /opt/busybox/ln -s "${CTL_DIR}" "${PERP_BASE}/${CTL_LNK}"
fi

exec \
  /usr/sbin/runchoom \
  /usr/sbin/runlimit -F ./rlimit.conf \
  /usr/sbin/perpd "${PERP_OPTS}" "${PERP_BASE}"
