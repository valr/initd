PATH=/opt/busybox
cd /
umask 022

ntpd_FLAGS=""

. /etc/rc.subr
. /etc/rc.conf

start() {
  pgrep -n -x /usr/bin/ntpd 1>/dev/null 2>/dev/null && \
    { echo "ntpd is already running"; return 1; }

  rm -f /run/ntpd.pid

  eval /usr/bin/ntpd -p /run/ntpd.pid -g -u ntp:ntp "${ntpd_FLAGS}"
}

stop() {
  pkill -TERM -x /usr/bin/ntpd
  pkill -CONT -x /usr/bin/ntpd

  pwait /usr/bin/ntpd 20 || \
    { echo "ntpd is still running"; return 1; }

  rm -f /run/ntpd.pid
}

restart() {
  stop
  start
}

status() {
  echo "ntpd is running as pid: "
  pgrep -x /usr/bin/ntpd
}

rc_run "start stop restart status" $@
