PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /usr/bin/udevd 1>/dev/null 2>/dev/null && \
    { echo "udevd is already running"; return 1; }

  STATUS=0
  /usr/bin/udevd --daemon                                 || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=subsystems || STATUS=1
  /usr/bin/udevadm trigger --action=add --type=devices    || STATUS=1
  /usr/bin/udevadm settle --timeout=60                    || STATUS=1
  return $STATUS
}

_start() {
  pgrep -n -x /usr/bin/udevd 1>/dev/null 2>/dev/null && \
    { echo "udevd is already running"; return 1; }

  /usr/bin/udevd --daemon
}

stop() {
  /usr/bin/udevadm control --exit

  pwait /usr/bin/udevd 20 || \
    { echo "udevd is still running"; return 1; }
}

restart() {
  stop
 _start
}

reload() {
  pgrep -n -x /usr/bin/udevd 1>/dev/null 2>/dev/null || \
    { echo "udevd is not running"; return 1; }

  /usr/bin/udevadm control --reload
}

status() {
  echo "udevd is running as pid: "
  pgrep -x /usr/bin/udevd
}

rc_run "start stop restart reload status" $@
