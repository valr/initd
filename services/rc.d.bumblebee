PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /usr/bin/bumblebeed 1>/dev/null 2>/dev/null && \
    { echo "bumblebeed is already running"; return 1; }

  PATH=/usr/bin /usr/bin/bumblebeed -D
}

stop() {
  pkill -TERM -x /usr/bin/bumblebeed
  pkill -CONT -x /usr/bin/bumblebeed

  pwait /usr/bin/bumblebeed 20 || \
    { echo "bumblebeed is still running"; return 1; }
}

restart() {
  stop
  start
}

status() {
  echo -e -n "bumblebeed is running as pid:" \
    `pgrep -x /usr/bin/bumblebeed | tr '\n' ' '` "\n"
}

rc_run "start stop restart status" $@
