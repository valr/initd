PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /usr/bin/acpid 1>/dev/null 2>/dev/null && \
    { echo "acpid is already running"; return 1; }

  rm -f /run/acpid.pid

  /usr/bin/acpid -p /run/acpid.pid
}

stop() {
  pkill -TERM -x /usr/bin/acpid
  pkill -CONT -x /usr/bin/acpid

  pwait /usr/bin/acpid 20 || \
    { echo "acpid is still running"; return 1; }

  rm -f /run/acpid.pid
}

restart() {
  stop
  start
}

status() {
  echo -n "acpid is running as pid: "
  pgrep -x /usr/bin/acpid
}

rc_run "start stop restart status" $@
