PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  [ ! -d /run/dbus ] && \
    install -m 755 -g dbus -o dbus -d /run/dbus

  pidfile /run/dbus/pid /usr/bin/dbus-daemon && \
    { echo "dbus-daemon is already running"; return 1; }

  rm -f /run/dbus/pid

  /usr/bin/dbus-daemon --system --fork
}

stop() {
  pidfile /run/dbus/pid /usr/bin/dbus-daemon || return 0

  kill -TERM $PID
  kill -CONT $PID

  pidwait $PID 20 || \
    { echo "dbus-daemon is still running"; return 1; }

  rm -f /run/dbus/pid
}

restart() {
  stop
  start
}

reload() {
  pidfile /run/dbus/pid /usr/bin/dbus-daemon || \
    { echo "dbus-daemon is not running"; return 1; }

  /usr/bin/dbus-send \
    --print-reply --system --type=method_call \
    --dest=org.freedesktop.DBus / org.freedesktop.DBus.ReloadConfig
}

status() {
  pidfile /run/dbus/pid /usr/bin/dbus-daemon; STATUS=$?

  case $STATUS in
    0)
      echo "dbus-daemon is running as pid:"
      echo $PID
      ;;
    1)
      echo "/run/dbus/pid does not exist or is not readable"
      ;;
    2)
      echo "/run/dbus/pid is invalid"
      ;;
  esac

  return $STATUS
}

rc_run "start stop restart reload status" $@
