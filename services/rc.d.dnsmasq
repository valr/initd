PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /usr/bin/dnsmasq 1>/dev/null 2>/dev/null && \
    { echo "dnsmasq is already running"; return 1; }

  rm -f /run/dnsmasq.pid

  /usr/bin/dnsmasq --enable-dbus --user=dnsmasq --pid-file=/run/dnsmasq.pid
}

stop() {
  pkill -TERM -x /usr/bin/dnsmasq
  pkill -CONT -x /usr/bin/dnsmasq

  pwait /usr/bin/dnsmasq 20 || \
    { echo "dnsmasq is still running"; return 1; }

  rm -f /run/dnsmasq.pid
}

restart() {
  stop
  start
}

reload() {
  pgrep -n -x /usr/bin/dnsmasq 1>/dev/null 2>/dev/null || \
    { echo "dnsmasq is not running"; return 1; }

  pkill -HUP -x /usr/bin/dnsmasq
}

status() {
  echo "dnsmasq is running as pid: "
  pgrep -x /usr/bin/dnsmasq
}

rc_run "start stop restart reload status" $@
