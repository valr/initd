PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr
. /etc/rc.conf

start() {
  pgrep -n -x /usr/bin/dhcpcd 1>/dev/null 2>/dev/null && \
    { echo "dhcpcd is already running"; return 1; }

  rm -f /run/dhcpcd.pid

  FLAGS=""
  if [ "${IP_VERSION}" ]; then
    FLAGS="-${IP_VERSION}"
  fi

  /usr/bin/dhcpcd -q -b "${FLAGS}"
}

stop() {
  /usr/bin/dhcpcd -q -x

  pwait /usr/bin/dhcpcd 20 || \
    { echo "dhcpcd is still running"; return 1; }

  rm -f /run/dhcpcd.pid
}

restart() {
  stop
  start
}

status() {
  echo "dhcpcd is running as pid:"
  pgrep -x /usr/bin/dhcpcd
}

rc_run "start stop restart status" $@
