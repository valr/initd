pkgname=services
pkgver=1.0.0
pkgrel=1
pkgdesc='services for the init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('initsystem')
source=('rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.dhcpc'
        'rc.d.eudev'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.lm_sensors'
        'rc.d.ntp'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'rc.d.wireless'
        'LICENSE')
md5sums=('b3158a98409ad0234d874f257aef7d30'
         '6fd3ad2827b1e7ac09bfe8bfc0d6fa40'
         '35d1e017de6158617f2b1a2bbf291044'
         'c81ad8cc66bd819b75c354234959384a'
         'fba02ce5db7274182bbef5ce16aa79f2'
         '9bc2327de5108e2654f568b5e1eacd63'
         'ed5afbda540156cc7d279133716248fe'
         'c2f4e490b32daf4f1bd182761abf08a9'
         'eb26a94b6798b9cf59003dd055b3e259'
         'f855f47cbb78ddba6fdb779e596a64ea'
         '676725ea0305cbe15772a349e9d39b14'
