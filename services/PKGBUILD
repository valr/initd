pkgname=services
pkgver=1.0.0
pkgrel=1
pkgdesc='services for the init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('initsystem')
source=('rc'
        'rc.subr'
        'rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.dhcpc'
        'rc.d.eudev'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.sensors'
        'rc.d.ntp'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'rc.d.wireless'
        'LICENSE')
md5sums=('f63986c7544f1f3cb61160000588cd7c'
         '43821e4310cedaa91aaff9667bf0383a'
         '1286cacc3d89a8d5633e2db59ddfccec'
         '6fd3ad2827b1e7ac09bfe8bfc0d6fa40'
         'db18f1f230a30707de33ffea243ff43b'
         'd43514b7ffe882f084fe0689d151873a'
