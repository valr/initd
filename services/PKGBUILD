pkgname=services
pkgver=1.0.0
pkgrel=1
pkgdesc='services for the init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('initsystem')
source=('rc'
        'rc.subr'
        'rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.dhcpc'
        'rc.d.eudev'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.sensors'
        'rc.d.ntp'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'rc.d.wireless'
        'LICENSE')
md5sums=('7f531b1139a9fd51fab7af6e8bb70410'
         '99c2389f648568956ae2ba15e2e68d36'
         'da7d730867c4b9b40e849058cb45f24e'
         '6fd3ad2827b1e7ac09bfe8bfc0d6fa40'
         '5286bac75b9afba0d1ab2553dc47ba1c'
