pkgname=services
pkgver=1.0.0
pkgrel=1
pkgdesc='services for the init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('initsystem')
source=('rc'
        'rc.subr'
        'rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.dhcpc'
        'rc.d.eudev'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.sensors'
        'rc.d.ntp'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'rc.d.wireless'
        'LICENSE')
md5sums=('01bbff3c3fc08f3f96f677eec951f583'
         '43821e4310cedaa91aaff9667bf0383a'
         'da7d730867c4b9b40e849058cb45f24e'
