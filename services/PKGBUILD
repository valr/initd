pkgname=services
pkgver=1.0.0
pkgrel=1
pkgdesc='services for the init system'
url='https://github.com/valr/initsystem'
license=('GPL')
groups=('initsystem')
arch=('any')
depends=('initsystem')
source=('rc'
        'rc.subr'
        'rc.d.acpi'
        'rc.d.alsa'
        'rc.d.bumblebee'
        'rc.d.cron'
        'rc.d.cups'
        'rc.d.dbus'
        'rc.d.dhcpc'
        'rc.d.eudev'
        'rc.d.iptables'
        'rc.d.ip6tables'
        'rc.d.sensors'
        'rc.d.ntp'
        'rc.d.syslog'
        'rc.d.tlp'
        'rc.d.udev'
        'rc.d.wireless'
        'LICENSE')
