PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  pgrep -n -x /opt/busybox/syslogd 1>/dev/null 2>/dev/null && \
    { echo "syslogd is already running"; return 1; }

  rm -f /run/syslogd.pid

  /opt/busybox/syslogd -K
}

stop() {
  pkill -TERM -x /opt/busybox/syslogd
  pkill -CONT -x /opt/busybox/syslogd

  pwait /opt/busybox/syslogd 20 || \
    { echo "syslogd is still running"; return 1; }

  rm -f /run/syslogd.pid
}

restart() {
  stop
  start
}

status() {
  echo -n "syslogd is running as pid: "
  pgrep -x /opt/busybox/syslogd | tr '\n' ' '
  echo ""
}

rc_run "start stop restart status" $@
