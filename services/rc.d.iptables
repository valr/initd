PATH=/opt/busybox
cd /
umask 022

. /etc/rc.subr

start() {
  /usr/bin/iptables-restore /etc/iptables/iptables.rules
}

stop() {
  STATUS=0
  /usr/sbin/iptables -t filter -F      || STATUS=1
  /usr/sbin/iptables -t filter -X      || STATUS=1
  /usr/sbin/iptables -t filter -Z      || STATUS=1
  /usr/sbin/iptables -t nat -F         || STATUS=1
  /usr/sbin/iptables -t nat -X         || STATUS=1
  /usr/sbin/iptables -t nat -Z         || STATUS=1
  /usr/sbin/iptables -t mangle -F      || STATUS=1
  /usr/sbin/iptables -t mangle -X      || STATUS=1
  /usr/sbin/iptables -t mangle -Z      || STATUS=1
  /usr/sbin/iptables -t raw -F         || STATUS=1
  /usr/sbin/iptables -t raw -X         || STATUS=1
  /usr/sbin/iptables -t raw -Z         || STATUS=1
  /usr/sbin/iptables -t security -F    || STATUS=1
  /usr/sbin/iptables -t security -X    || STATUS=1
  /usr/sbin/iptables -t security -Z    || STATUS=1
  /usr/sbin/iptables -P INPUT ACCEPT   || STATUS=1
  /usr/sbin/iptables -P OUTPUT ACCEPT  || STATUS=1
  /usr/sbin/iptables -P FORWARD ACCEPT || STATUS=1
  return $STATUS
}

restart() {
  stop
  start
}

status() {
  /usr/bin/iptables -L -v -n --line-numbers
}

rc_run "start stop restart status" $@
