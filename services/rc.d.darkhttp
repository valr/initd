PATH=/opt/busybox
cd /
umask 022

darkhttpd_FLAGS=""

. /etc/rc.subr
. /etc/rc.conf

start() {
  pgrep -n -x /usr/bin/darkhttpd 1>/dev/null 2>/dev/null && \
    { echo "darkhttpd is already running"; return 1; }

  eval /usr/bin/darkhttpd /srv/http/darkhttpd --log /var/log/darkhttpd/access.log --chroot --daemon --mimetypes /etc/conf.d/mimetypes --uid nobody --gid nobody "${darkhttpd_FLAGS}"
}

stop() {
  pkill -TERM -x /usr/bin/darkhttpd
  pkill -CONT -x /usr/bin/darkhttpd

  pwait /usr/bin/darkhttpd 20 || \
    { echo "darkhttpd is still running"; return 1; }
}

restart() {
  stop
  start
}

status() {
  echo "darkhttpd is running as pid: "
  pgrep -x /usr/bin/darkhttpd
}

rc_run "start stop restart status" $@
